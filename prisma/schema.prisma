datasource db {
  provider = "sqlite"  // or your actual provider
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String        @id @default(cuid())
  clerkId       String        @unique
  email         String        @unique
  username      String        @unique
  photo         String
  firstName     String?
  lastName      String?
  planId        Int           @default(1)
  creditBalance Int           @default(10)

  images        Image[]       @relation("UserImages")
  transactions  Transaction[] @relation("UserTransactions")
}

model Image {
  id                 String   @id @default(cuid())
  title              String
  transformationType String
  publicId           String
  secureURL          String
  width              Int?
  height             Int?
  config             Json?
  transformationUrl  String?
  aspectRatio        String?
  color              String?
  prompt             String?
  
  author             User     @relation("UserImages", fields: [authorId], references: [id])
  authorId           String

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Transaction {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  stripeId  String   @unique
  amount    Float
  plan      String?
  credits   Int?
  
  buyer     User?    @relation("UserTransactions", fields: [buyerId], references: [id])
  buyerId   String?
}
